<% include ../partials/header %>
<style>
    
</style>

    <div class="container-fluid">
        <div class="container-fluid text-center" style="background: #e9ecef">
            <h2 style="padding:15px">New Invoice</h2>
        </div>
            <h4 style="text-align: center">
                Customer's Details
            </h4>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <form method="POST" action="/customer">
                        <div class="form-group">
                            <label for="name">Customer's Name: </label>
                            <input id="name" name="customer[name]" class="form-control" type="text" placeholder="Enter Customer's Name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email Id: </label>
                            <input id="email" name="customer[email]" class="form-control" type="text" placeholder="Enter Email Id">
                        </div>
                        <div class="form-group">
                            <label for="mobile_no">Mobile Number: </label>
                            <input id="mobile_no" name="customer[mobile_no]" class="form-control" type="number" placeholder="Enter Mobile Number">
                        </div>
                        <div class="form-group">
                            <label for="date_of_birth">Date Of Birth: </label>
                            <input id="date_of_birth" name="customer[dob]" class="form-control" type="date" placeholder="Enter Date Of Birth"
                                value="1980-01-01">
                        </div>
                        <button class="btn btn-primary" style="margin: auto 35%">Submit</button>
                    </form>
                </div>
                <div class="col-sm-4"></div>
            </div>
            <div style="width:25%;margin: 3rem auto;">
                
            </div>

